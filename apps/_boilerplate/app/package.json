{
    "name": "@boilerplate/app",
    "version": "1.50.2-alpha.2",
    "description": "Boilerplace",
    "private": true,
    "scripts": {
        "build": "run -T rimraf dist && yarn build:main",
        "build:main": "tsc -p tsconfig.json",
        "build-win32": "node ../../../scripts/build-win32.mjs boilerplate.exe && node ../../../scripts/copy-natives.js win32-x64",
        "__test": "jest",
        "start": "node dist/index.js"
    },
    "dependencies": {
        "@boilerplate/generic": "1.50.2-alpha.1"
    },
    "prettier": "@sofie-automation/code-standard-preset/.prettierrc.json",
    "engines": {
        "node": ">=18"
    },
    "lint-staged": {
        "*.{js,css,json,md,scss}": [
            "prettier"
        ],
        "*.{ts,tsx}": [
            "eslint"
        ]
    },
    "devDependencies": {
        "lerna": "^6.6.1"
    }
}
